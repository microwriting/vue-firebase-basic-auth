{
  "name": "firebase-basic-auth",
  "description": "Vue 2.x template with composition api + Typescript + Firebase Authentication",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build --modern",
    "build:ci": "npm run build --report",
    "lint": "run-s lint:*",
    "lint:eslint": "vue-cli-service lint",
    "lint:stylelint": "stylelint --fix \"src/**/*.{vue,css,scss}\" \"public/**/*.css\"",
    "lint:markdownlint": "markdownlint \"docs/*.md\" \"*.md\"",
    "pretty": "prettier --write --loglevel warn \"**/*.{js,ts,json,css,scss,vue,html,md}\"",
    "format": "run-s pretty lint",
    "deploy": "nmp run build && firebase deploy",
    "dev": "vue-cli-service serve"
  },
  "gitHooks": {
    "pre-commit": "cross-env PRE_COMMIT=true lint-staged"
  },
  "dependencies": {
    "@vue/composition-api": "^0.5.0",
    "core-js": "^3.6.4",
    "firebase": "^7.14.3",
    "register-service-worker": "^1.7.1",
    "tailwindcss": "^1.4.6",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@fullhuman/vue-cli-plugin-purgecss": "~2.2.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.3.0",
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-plugin-pwa": "~4.3.0",
    "@vue/cli-plugin-router": "~4.3.0",
    "@vue/cli-plugin-typescript": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "cross-env": "^7.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^10.2.2",
    "markdownlint-cli": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.17.2",
    "typescript": "^3.9.2",
    "vue-template-compiler": "^2.6.11"
  }
}
